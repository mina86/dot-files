[color]
	ui = auto
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green
	changed = red
	untracked = cyan
[color "interactive"]
	prompt = yellow bold
	help = cyan
[alias]
	a      = am -3
	br     = branch
	ci     = commit
	amend  = commit --amend
	fixup  = commit --amend -C HEAD
	wip    = commit -m wip
	co     = checkout
	df     = diff
	cached = diff --cached
	ch     = diff --cached
	pick   = cherry-pick
	rb     = rebase
	rbi    = rebase -i
	cont   = rebase --continue
	ct     = rebase --continue
	s      = status -uno
	st     = status -uno
	mt     = mergetool
	sw     = show
	wc     = whatchanged
	l      = log
	lg     = log
	lp     = log -p
	k      = !gitk
	edit   = "!f() { GIT_EDITOR=\"sed -i 1s/pick/edit/\" git rebase -i \"$1\"~; }; f"
	ed     = edit
	fix    = "!f() { git commit -m\"fixup! $(git log -1 --pretty=%s $1)\"; }; f"
	fixed  = rebase -i --autosquash
	tpush  = !tsocks git push
	patch  = "!f() { file=\"$1\"; shift; patch -p1 <$file \"$@\"; }; f"
[user]
	name = Michal Nazarewicz
	email = mina86@mina86.com
;[i18n]
	;commitencoding = ISO-8859-2
	;logoutputencoding = ISO-8859-2
[core]
	pager = less -FRSX
[push]
	default = current

[url "github:mina86/"]
	pushInsteadOf = git://github.com/mina86/

[format]
	thread = deep

[sendemail]
	from = Michal Nazarewicz <mina86@mina86.com>
	; format-patch takes care of threading
	thread = no
	confirm = always
