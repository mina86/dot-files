#!/bin/sh

if which urxvt >/dev/null >&1; then
	CMD=urxvt
	OPTS=
else
	CMD=xterm
	OPTS='+ah -aw -b 0 -bw 0 +vb +nul -pc +pob -s -si -sk +t'
fi

while [ $# != 0 ]; do
	case "$CMD:$1" in
	urxvt:-mesg)                            shift  ;;
	*:-mesg)     OPTS="$OPTS $1";           shift  ;;
	*:-T)        OPTS="$OPTS -title    $2"; shift 2;;
	*:-N)        OPTS="$OPTS -name     $2"; shift 2;;
	*:-*)                                   break  ;;
	*)           OPTS="$OPTS -e";           break  ;;
	esac
done

exec "$CMD" $OPTS "$@"
