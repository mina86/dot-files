#! /bin/sh

set -e


##
## Usage
##
usage () {
	cat <<EOF
usage: $0 [ <options> ] [ <files> ]
<options>:
  -f  update files in current directory from configuration files
  -t  update configuration files from files in current directory
  -B  do not make backups
  -y  assume "y" to all questions
EOF
	exit 1
}


##
## Parse arguments
##
DIRECTION=
INTERACTIVE=true
BACKUP=true

while [ x"${1#-}" != x"$1" ]; do
	ARG=${1#?}
	shift
	while [ -n "$ARG" ]; do
		case "$ARG" in
		f*) DIRECTION=from   ;;
		t*) DIRECTION=to     ;;
		B*) BACKUP=false     ;;
		y*) INTERACTIVE=false;;
		?*) usage            ;;
		esac
		ARG=${ARG#?}
	done
done


##
## Print info
##
case "$DIRECTION" in
from) echo 'Updating files in current directory from configuration files' ;;
to)   echo 'Updating configuration files from files in current directory' ;;
*)    usage
esac


##
## File arguments
##
if [ $# -eq 0 ]; then
	match () {
		return 0
	}
else
	match () {
		for f in "$@"; do
			case "$FILE" in "$f")
				return 0
			esac
		done
		return 1
	}
fi


##
## Interactive asking
##
if $INTERACTIVE; then
	ask() {
		if which cdiff >/dev/null 2>&1; then
			cdiff -u "$2" "$1"
		else
			diff  -u "$2" "$1"
		fi

		while :; do
			printf '%s: [yn] ' "$2"
			read answer || exit 0
			case "$answer" in
			[yY]) return 0 ;;
			[nN]) return 1 ;;
			esac
		done
	}
else
	ask() {
		return 0
	}
fi


##
## Backup & copy
##
cp_backup() {
	if ! [ -e "$2" ]; then
		cp "$1" "$2"
		return 0
	elif ! cmp -s -- "$1" "$2" && ask "$1" "$2"; then
		if $BACKUP; then
			mv -- "$2" "$2~"
		fi
		cp "$1" "$2"
		return 0
	else
		return 1
	fi
}

cp_backup_from() {
	cp_backup "$2" "$1"
}

cp_backup_to() {
	cp_backup "$@"
}

##
## Template handling
##
TEMPFILE=$(umask 077; tempfile -d /tmp)
trap 'rm -f -- "$TEMPFILE"' 0

cp_tpl_from() {
	if ! [ -e "$1" ]; then
		sed "s#$HOME#{{HOME}}#g" <$2 >$1
	else
		sed "s#{{HOME}}#$HOME#g" <$1 >$TEMPFILE
		if cp_backup "$2" "$TEMPFILE"; then
			sed "s#$HOME#{{HOME}}#g" <$TEMPFILE >$1
		fi
	fi
}

cp_tpl_to() {
	if [ -e "$1" ]; then
		sed "s#{{HOME}}#$HOME#g" <$1 >$TEMPFILE
		cp_backup "$TEMPFILE" "$2" || true
	fi
}



##
## Do the job
##
handle() {
	if match "$@"; then
		case "$DEST" in '~'*)   DEST=$HOME${DEST#'~'}; esac
		case "$DEST" in *@)     DEST=${DEST%@}${FILE##*/}; esac
		case "$DEST" in */.|*/) DEST=$DEST$FILE; esac

		if ! [ -d "${DEST%/*}" ]; then
			echo "Skipping $FILE"
			return 0
		fi

		case "$FILE" in
		*.tpl)
			DEST=${DEST%.tpl}
			cp_tpl_$DIRECTION "$FILE" "$DEST" <&3
			;;
		*)
			cp_backup_$DIRECTION "$FILE" "$DEST" cp <&3 || true
		esac
	fi
}

while read FILE DEST; do
	case $FILE in
	*'*'*)
		for FILE in $FILE; do
			if [ -f "$FILE" ]; then
				case $FILE in *~)
					continue
				esac
				_DEST=$DEST
				handle "$@"
				DEST=$_DEST
			fi
		done
		;;
	*)
		handle "$@"
	esac
done 3<&1 <<EOF
Xresources.tpl     ~/.
dot-emacs          ~/.emacs.d/init.el
dot-mail           ~/.emacs.d/mail.el
git/aliases        ~/.gitaliases
git/config         ~/.gitconfig
git/ignore         ~/.gitignore
inputrc            ~/.
irssi.theme        ~/.irssi/mina.theme
risc-mode.el       ~/.emacs.d/elisp/
sawfishrc          ~/.sawfish/rc
sawfish-lisp/*.jl  ~/.sawfish/lisp/@
statuses           ~/.irssi/
xinitrc            ~/.
bin/*              ~/
sh/*               ~/.@
userjs/*.js        ~/.opera/
userjs/*.css       ~/.opera/usercss/@
opera/*.css        ~/.opera/usercss/@
opera/keyboard.ini ~/.opera/keyboard/@
opera/menu.ini     ~/.opera/menu/@
opera/toolbar.ini  ~/.opera/toolbar/@
EOF
