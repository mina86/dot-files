AddToFunc	ReadDir
+ I PipeRead 'cd "$$FVWM_USERDIR" && find $* -maxdepth 1 -type f -name "*.fv" \( \! -name "*.*.fv" -o -name "*.$$(hostname)" \) -printf "Read '%p'\\n"'

ReadDir		. functions menus hooks bindings styles autoprops \
			modules-config
