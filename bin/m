#!/bin/sh

## MPD
_mpc() {
	mpc --format '[[[%artist% <&%album%> ]|[%artist% - ]|[<%album%> ]]%title%]|[%file%]' "$@" | sed -n -e '
		1 h
		/^\(\[[a-z]*\] \).*/ {
			s//\1/
			G
			s/\n//
			x
		}
		$ {
			x
			p
		}
'
}

mpd_file() {
	FILE="/data/music/$(mpc --format %file% |head -n1)"
}

mpd_query() {
	return 0
}

mpd_ctl() {
	case ${1:-show} in
	play|pause|stop|prev|toggle|next)
		_mpc "$@"
		;;
	rewind)
		_mpc seek 0:00:00
		;;
	is-playing)
		mpc -f '' | grep -wq playing
		;;
	file|path)
		mpd_file
		echo "$FILE"
		;;
	dir)
		mpd_file
		dirname "$FILE"
		;;
	ls)
		mpd_file
		DIR=$(dirname "$FILE")
		printf %s:\\n "$DIR"
		ls -- "$DIR"
		;;
	show)
		_mpc
		;;
	pause-maybe)
		mpc pause-if-playing
		;;
	*)
		echo "unknown or unsupported action: $1" >&2
		return 1
	esac
}


## Spotify
spotify_cmd() {
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify \
		/org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.$1 \
		>/dev/null
}

spotify_query() {
	qdbus org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 \
		org.freedesktop.DBus.Properties.Get \
		org.mpris.MediaPlayer2.Player PlaybackStatus
}

spotify_ctl() {
	case ${1:-show} in
	play)
		spotify_cmd Play
		;;
	pause)
		spotify_cmd Pause
		;;
	toggle)
		spotify_cmd PlayPause
		;;
	next)
		spotify_cmd Next
		;;
	prev)
		spotify_cmd Previous
		;;
	stop)
		spotify_cmd Stop
		;;
	is-playing)
		spotify_query | grep -wq Playing
		;;
	pause-maybe)
		if spotify_query | grep -wq Playing; then
			spotify_cmd Pause
		else
			return 1
		fi
		;;
	*)
		echo "unknown or unsupported action: $1" >&2
		return 1
	esac
}


## Audacious
audacious_query() {
	_=$(audtool --current-song) && test "$_" != "No song playing."
}

audacious_ctl() {
	case ${1:-show} in
	play|pause|stop)
		audacious --$1
		;;
	toggle)
		audacious --play-pause
		;;
	next)
		audacious --fwd
		;;
	prev)
		audacious --rew
		;;
	show)
		audtool --current-song
		;;
	is-playing)
		audtool --playback-playing
		;;
	pause-maybe)
		if audtool --playback-playing; then
			audacious --pause
		else
			return 1
		fi
		;;
	*)
		echo "unknown or unsupported action: $1" >&2
		return 1
	esac
}


## Main part
if [ -e ~/bin/libexec/"music-pre-$1" ]; then
	source ~/bin/libexec/"music-pre-$1"
	exit $?
fi

for player in audacious spotify mpd; do
	if "${player}_query" >/dev/null 2>&1; then
		break
	fi
done

if [ x"$1" = xif ]; then
	if [ x"$2" != x$player ]; then
		echo "running $player, not $2" >&2
		exit 255
	fi
	shift 2
	if [ $# -eq 0 ]; then
		exit 0
	fi
fi

if [ -e ~/bin/libexec/"music-$player-$1" ]; then
	source ~/bin/libexec/"music-$player-$1"
	exit $?
fi

${player}_ctl "$@"
