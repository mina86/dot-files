#!/bin/sh

playing_file=$(umask 077; mktemp)
trap 'rm -f -- "$playing_file"' 0

(
	if music pause-maybe; then
		ln -sf ~/bin/music "$playing_file"
	fi

	sleep 1
	exec xset dpms force off
) &

if [ -e ~/bin/libexec/slock ]; then
	~/bin/libexec/slock
else
	xlock -mode blank -bg black -fg gray3
fi

set -- toggle
. "$playing_file"
