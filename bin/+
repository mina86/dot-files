#!/bin/sh

dir=$PWD
while [ x"$dir" != x/ ]; do
	if [ -e "$dir/.git" ]; then
		exec git add "$@"
	fi

	if [ -e "$dir/${P4CONFIG:-.p4config}" ]; then
		exec p add "$@"
	fi

	case "$dir" in *.git)
		if [ -e "$dir/config" ]; then
			exec git add "$@"
		fi
	esac

	dir=${dir%/*}
done

echo Not a git repository nor perforce client.
