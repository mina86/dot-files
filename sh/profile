# Set ENV
export ENV=~/.shellrc

# Source .shellrc
if [ x"$1" = xnothing ]; then
	: nothing
elif [ -r "$1" ]; then
	. "$1"
elif [ -r ~/.shellrc ]; then
	. ~/.shellrc
fi

# Start emacs if not running
if which emacs >/dev/null 2>/dev/null &&
   ! [ -e /tmp/emacs$UID/server ]; then
	emacs --daemon
fi
