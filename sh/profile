## .profile                                             -*- shell-script -*-

ENV=~/.shellrc
export ENV

if [ -n "$BASH_VERSION" ] && [ -r ~/.bashrc ]; then
	. ~/.bashrc
elif [ -r ~/.shellrc ]; then
	. ~/.shellrc
fi

# Start emacs daemon if not running
if which emacs >/dev/null 2>/dev/null; then
	[ -e /tmp/emacs$(id -u)/server ] || emacs --daemon >/dev/null 2>&1 &
fi
