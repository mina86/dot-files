[color]
	ui = auto
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green
	changed = red
	untracked = cyan
[color "interactive"]
	prompt = yellow bold
	help = cyan
[alias]
	a      = am -3
	b      = branch -v
	br     = branch -v
	ci     = commit
	amend  = commit --amend
	fix    = "!f() { if [ $# -eq 0 ]; then git commit --amend -C HEAD; else git commit --fixup \"$@\"; fi; }; f"
	wip    = commit -m wip
	co     = checkout
	df     = diff -p --stat
	ch     = diff -p --stat --cached
	pick   = cherry-pick
	rb     = rebase
	rbi    = rebase -i
	cont   = rebase --continue
	ct     = rebase --continue
	s      = status -uno
	st     = status -uno
	sh     = stash
	pop    = stash pop
	mt     = mergetool
	sw     = show
	l      = log
	ll     = log --stat
	lg     = log
	lp     = log -p
	tip    = log -n1
	k      = !gitk
	edit   = "!f() { GIT_EDITOR=\"sed -i 1s/pick/edit/\" git rebase -i \"$1\"~; }; f"
	ed     = edit
	sync   = remote update
	patch  = "!f() { file=\"$1\"; shift; patch -p1 <$file \"$@\"; }; f"
